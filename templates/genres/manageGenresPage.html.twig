{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        {{  form_start(form) }}

        <div class="row mt-2">
            <div class="form-group col-2">
                <p>{{ form_label(form.name) }}:</p>
            </div>
            <div class="form-group col-5">
                {{ form_errors(form.name) }}
                {{ form_widget( form.name, {'attr': {'class': 'form-control'}} ) }}
            </div>
            <div class="form-group col-5">
                {{ form_widget(form.add_genre, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>

        {{ form_end(form) }}

        <br><br>

        <h3>Genres:</h3>

        <a href="{{ path('deleteAllGenres') }}">Delete All Genres</a>

        <hr/>

        {% if genres|length > 0 %}
            {% for genre in genres  %}
                <div class="row">
                    <div class="col-9">
                        <p>{{ genre.name }}</p>
                    </div>
                    <div class="col-3">
                        <a class="btn btn-primary" type="submit" href="/genres/delete/{{ genre.id }}">Delete</a>
                    </div>
                </div>
                <hr/>
            {% endfor %}
        {% else %}
            <p>No Genres, add some!</p>
        {% endif %}

    </div>

{% endblock %}

