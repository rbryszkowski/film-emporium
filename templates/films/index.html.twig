{% extends 'films/base.html.twig' %}

{% block body %}

    <div class="container">

        <h3>Search Film</h3>

        <form class="row mt-4" action="/" method="GET">
                <div class="col">
                    <input class="form-control" type="search" name="search" value="{{ search }}" />
                </div>
                <div class="col">
                    <select class="form-control" name="genres" id="genres_select">
                        <option value="">--genre--</option>
                        {% for genre in genres %}
                            <option value="{{ genre.name }}" {% if genre.name == selectedGenre %}selected{% endif %} > {{ genre.name }} </option>
                        {%  endfor %}
                    </select>
                </div>
                <div class="col">
                    <input class="form-control btn btn-primary" type="submit">
                </div>
        </form>

        <div class="row mt-4">
            <div class="col-12">
                <button class="btn btn-primary" type="submit" formaction="/films/add">Add Film</button>
            </div>
        </div>

        <hr/>

        <h3>Films:</h3>
        {% if films|length > 0 %}
            {% for film in films  %}
                <div>
                <p>Title: {{ film.title }}</p>
                <p>Description: {{ film.description }}</p>
                <p>Director: {{ film.director ? film.director.name : '(No Director)' }}</p>
                <p>Genres:</p>
                {% for genre in film.genres %}
                    <li>{{ genre.name }}</li>
                {% endfor %}
                <p><a href="/films/update/{{ film.id }}">Update</a> | <a href="/films/delete/{{ film.id }}">Delete</a></p>
                </div>
                <hr/>
            {% endfor %}
        {% else %}
            <p>No films in database!</p>
        {% endif %}

    </div>


{% endblock %}