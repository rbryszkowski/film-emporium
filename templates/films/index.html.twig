{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <h3>Featured Films:</h3>

        <br>

        <div class="row">
            {% if featured|length > 0 %}
                {% for i in range(0, (featured|length - 1)) %}
                    <div class="col">
                        <a href="/films/details/{{ featured[i].id }}">
                            {% if featuredOmdb[i].success == true %}
                                <img class="film-img" src="{{ featuredOmdb[i].poster }}">
                            {% else %}
                                <p>No Poster available</p>
                            {% endif %}
                            <p><b>{{ featured[i].title }}</b></p>
                        </a>
                    </div>
                {% endfor %}
            {% else %}
                <p>No Feature Films to display!</p>
            {% endif %}
        </div>

        <h3>Search Film</h3>

        <a href="{{ path('deleteAllFilms') }}">Delete All Films</a>

        <form class="row mt-4" action="/" method="GET">
                <div class="col">
                    <input class="form-control" type="search" name="search" value="{{ search }}" />
                </div>
                <div class="col">
                    <select class="form-control" name="genres" id="genres_select">
                        <option value="">--genre--</option>
                        {% for genre in genres %}
                            <option value="{{ genre.name }}" {% if genre.name == selectedGenre %}selected{% endif %} > {{ genre.name }} </option>
                        {%  endfor %}
                    </select>
                </div>
                <div class="col">
                    <input class="form-control btn btn-primary" type="submit">
                </div>
        </form>

        <br>

        <h3>Films:</h3>

        <hr/>

        {% if films|length > 0 %}
            {% for film in films  %}
                <div class="row">
                    <div class="col-9">
                        <p><b>Title:</b> {{ film.title }}  |  <b>Director:</b>{{ film.director ? film.director.name : 'N/A' }}
                        </p>
                    </div>
                    <div class="col-3">
                        <a class="btn btn-primary" type="submit" href="/films/update/{{ film.id }}">Update</a>
                        <a class="btn btn-primary" type="submit" href="/films/delete/{{ film.id }}">Delete</a>
                        <a class="btn btn-primary" type="submit" href="/films/details/{{ film.id }}">Details</a>
                    </div>
                </div>
                <hr/>
            {% endfor %}
        {% else %}
            <p>No films in database!</p>
        {% endif %}

    </div>


{% endblock %}