{% extends 'films/base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3 px-4 mb-4">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/films/add">Add Films</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/films/genres">Manage Genres</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/films/directors">Manage Directors</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">

        <h3>Search Film</h3>

        <form class="row mt-4" action="/" method="GET">
                <div class="col">
                    <input class="form-control" type="search" name="search" value="{{ search }}" />
                </div>
                <div class="col">
                    <select class="form-control" name="genres" id="genres_select">
                        <option value="">--genre--</option>
                        {% for genre in genres %}
                            <option value="{{ genre.name }}" {% if genre.name == selectedGenre %}selected{% endif %} > {{ genre.name }} </option>
                        {%  endfor %}
                    </select>
                </div>
                <div class="col">
                    <input class="form-control btn btn-primary" type="submit">
                </div>
        </form>

        <br>

        <h3>Films:</h3>

        <hr/>

        {% if films|length > 0 %}
            {% for film in films  %}
                <div class="row">
                    <div class="col-9">
                        <p><b>Title:</b> {{ film.title }}  |  <b>Director:</b> {{ film.director ? film.director.name : '(No Director)' }}</p>
                    </div>
                    <div class="col-3">
                        <a class="btn btn-primary" type="submit" href="/films/update/{{ film.id }}">Update</a>
                        &nbsp;&nbsp;
                        <a class="btn btn-primary" type="submit" href="/films/delete/{{ film.id }}">Delete</a>
                        &nbsp;&nbsp;
                        <a class="btn btn-primary" type="submit" href="/films/details/{{ film.id }}">Details</a>
                    </div>
                </div>
                <hr/>
            {% endfor %}
        {% else %}
            <p>No films in database!</p>
        {% endif %}

    </div>


{% endblock %}