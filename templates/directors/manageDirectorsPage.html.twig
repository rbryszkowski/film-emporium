{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        {{  form_start(form) }}

        <div class="row mt-2">
            <div class="form-group col-2">
                <p>{{ form_label(form.name) }}:</p>
            </div>
            <div class="form-group col-5">
                {{ form_errors(form.name) }}
                {{ form_widget( form.name, {'attr': {'class': 'form-control'}} ) }}
            </div>
            <div class="form-group col-5">
                {{ form_widget(form.add_director, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>

        {{ form_end(form) }}

        <br><br>

        <h3>Directors:</h3>

        <a href="{{ path('deleteAllDirectors') }}">Delete All Directors</a>

        <hr/>

        {% if directors|length > 0 %}
            {% for director in directors  %}
                {% if director.name != 'N/A' %}
                    <div class="row">
                        <div class="col-9">
                            <p>{{ director.name }}</p>
                        </div>
                        <div class="col-3">
                            <a class="btn btn-primary" type="submit" href="/directors/delete/{{ director.id }}">Delete</a>
                        </div>
                    </div>
                    <hr/>
                {% endif %}
            {% endfor %}
        {% else %}
            <p>No Directors, add some!</p>
        {% endif %}

    </div>

{% endblock %}